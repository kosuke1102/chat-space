.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__curent-group
        =@group.name
      .main-header__left-box__member-list
        Memberï¼š
        %li.main-header__left-box__member-list__member
          - @group.users.each do |user|
            = user.name
    .main-header__left-box__member-list__member
    .main-header__left-box-btn
      = link_to "Edit", edit_group_path(@group.id)
  .messages
    = render @messages
  .form
    = form_for [@group, @message] do |f|
      .form__mask
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        = f.label :image, class: 'form__mask__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit'
      %input.submit-btn{"data-disable-with": "Send", name: "commit", type: "submit", value: "Send"}/


